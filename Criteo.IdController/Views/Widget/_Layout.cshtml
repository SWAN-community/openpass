<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background: #FFF;
            height: 100%;
            max-height: 150px;
            max-width: 300px;
            width: 100%;
        }

        h1 {
            font-size: 1.5em;
        }

        p {
            font-size: 1em;
        }

        button {
            display: block;
        }
    </style>
    @RenderSection("CustomStyles", required: false)

    <script type="text/javascript" src="@Url.Content("/js/utils.js")"></script>
    @RenderSection("Scripts", required: false)
</head>
    <body>
        @RenderBody()
    </body>
</html>