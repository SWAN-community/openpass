{
  "CriteoLogging": {
    "Section": [
      {
        "Scope": "Microsoft.AspNetCore",
        "Target": [
          {
            "Type": "null",
            "Minimum": "Debug",
            "Maximum": "Info"
          }
        ]
      },
      {
        "Target": [
          {
            "Type": "syslog",
            "Minimum": "Info",
            "Param": [
              {
                "Name": "appName",
                "Value": "OpenPass.IdController"
              }
            ]
          },
          {
            "Type": "metricsRegistry",
            "Minimum": "Info"
          }
        ]
      }
    ]
  },
  "Email": {
    "Server": {
      "Host": "mail-relay.service.consul",
      "Port": 25,
      "EnableSsl": false
    },
    "Sender": {
      "DisplayName": "OpenPass",
      "Address": "openpass@criteo.com"
    }
    /*"Authentication": {
      "UserName": "user",
      "Password": "pass"
    }*/
  },
  "allowedOrigins": "*"
}
